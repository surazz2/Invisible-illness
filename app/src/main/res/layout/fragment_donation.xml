<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#909090"
    tools:context=".ui.Donation.DonationFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingHorizontal="@dimen/activity_full_margin"
                    android:paddingVertical="@dimen/activity_large_text_size">

                    <EditText
                        android:id="@+id/donation_first_name"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:background="@drawable/form_design"
                        android:drawablePadding="@dimen/activity_half_margin"
                        android:hint="First Name"
                        android:nextFocusDown="@id/emailForm"
                        android:paddingLeft="@dimen/activity_text_full_size"
                        android:paddingRight="@dimen/activity_half_margin"
                        android:singleLine="true" />

                    <EditText
                        android:id="@+id/donation_last_name"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginTop="@dimen/activity_text_full_size"
                        android:background="@drawable/form_design"
                        android:drawablePadding="@dimen/activity_half_margin"
                        android:hint="Last Name"
                        android:nextFocusDown="@id/learning_first_name"
                        android:paddingLeft="@dimen/activity_text_full_size"
                        android:paddingRight="@dimen/activity_half_margin"
                        android:singleLine="true" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/activity_text_full_size"
                        android:paddingLeft="@dimen/activity_full_margin"
                        android:text="Australia" />

                    <EditText
                        android:id="@+id/donation_address"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginTop="@dimen/activity_text_full_size"
                        android:background="@drawable/form_design"
                        android:drawablePadding="@dimen/activity_half_margin"
                        android:hint="House No and Street Address"
                        android:nextFocusDown="@id/learning_last_name"
                        android:paddingLeft="@dimen/activity_text_full_size"
                        android:paddingRight="@dimen/activity_half_margin"
                        android:singleLine="true" />

                    <EditText
                        android:id="@+id/donation_apartment_suite"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginTop="@dimen/activity_text_full_size"
                        android:background="@drawable/form_design"
                        android:drawablePadding="@dimen/activity_half_margin"
                        android:hint="Apartment, suite,"
                        android:nextFocusDown="@id/learning_last_name"
                        android:paddingLeft="@dimen/activity_text_full_size"
                        android:paddingRight="@dimen/activity_half_margin"
                        android:singleLine="true" />


                    <EditText
                        android:id="@+id/donation_suburb"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginTop="@dimen/activity_text_full_size"
                        android:background="@drawable/form_design"
                        android:drawablePadding="@dimen/activity_half_margin"
                        android:hint="Suburb"
                        android:inputType="textEmailAddress"
                        android:nextFocusDown="@id/learning_suburb"
                        android:paddingLeft="@dimen/activity_text_full_size"
                        android:paddingRight="@dimen/activity_half_margin"
                        android:singleLine="true" />

                    <EditText
                        android:id="@+id/donation_state"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginTop="@dimen/activity_text_full_size"
                        android:background="@drawable/form_design"
                        android:drawablePadding="@dimen/activity_half_margin"
                        android:hint="State"

                        android:nextFocusDown="@id/learning_suburb"
                        android:paddingLeft="@dimen/activity_text_full_size"
                        android:paddingRight="@dimen/activity_half_margin"
                        android:singleLine="true" />


                    <EditText
                        android:id="@+id/donation_post_code"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginTop="@dimen/activity_text_full_size"
                        android:background="@drawable/form_design"
                        android:drawablePadding="@dimen/activity_half_margin"
                        android:hint="Post Code"
                        android:nextFocusDown="@id/learning_email"
                        android:paddingLeft="@dimen/activity_text_full_size"
                        android:paddingRight="@dimen/activity_half_margin"
                        android:singleLine="true" />

                    <EditText
                        android:id="@+id/donation_phone"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginTop="@dimen/activity_text_full_size"
                        android:background="@drawable/form_design"
                        android:drawablePadding="@dimen/activity_half_margin"
                        android:hint="Phone"
                        android:nextFocusDown="@id/learning_email"
                        android:paddingLeft="@dimen/activity_text_full_size"
                        android:paddingRight="@dimen/activity_half_margin"
                        android:singleLine="true" />

                    <EditText
                        android:id="@+id/donation_email"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginTop="@dimen/activity_text_full_size"
                        android:background="@drawable/form_design"
                        android:drawablePadding="@dimen/activity_half_margin"
                        android:hint="Email"
                        android:nextFocusDown="@id/learning_email"
                        android:paddingLeft="@dimen/activity_text_full_size"
                        android:paddingRight="@dimen/activity_half_margin"
                        android:singleLine="true" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Choose your donation plan" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="if choose day $25, if you choose monthly $50 and if you choose yearly $100 " />

                        <RadioGroup
                            android:id="@+id/donation_price"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:orientation="horizontal">

                            <RadioButton
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:checked="false"
                                android:text="Day"
                                android:textColor="@color/white"
                                android:textSize="12dp" />

                            <RadioButton
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Monthly"
                                android:textColor="@color/white"
                                android:textSize="12dp" />

                            <RadioButton
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Year"
                                android:textColor="@color/white"
                                android:textSize="12dp" />


                        </RadioGroup>
                    </LinearLayout>

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/activity_margin_padding_fifteen"
                    android:gravity="center"
                    android:orientation="vertical">

                    <Button
                        android:id="@+id/donation_submit"
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/login_btn_drawable"
                        android:paddingHorizontal="@dimen/activity_large_text_size"
                        android:text="Donation"
                        android:textColor="@color/white" />
                </LinearLayout>


            </LinearLayout>

        </androidx.core.widget.NestedScrollView>
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>